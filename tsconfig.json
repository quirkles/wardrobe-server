{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020", "esnext.asynciterable"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
